html
  head
    title Big Ol Test
    link(rel='stylesheet', href='/stylesheets/foundation.css')
    link(rel='stylesheet', href='/stylesheets/game.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    script(src="/socket.io/socket.io.js")
    script(src="views/home.js")
    script(src="js/vendor/custom.modernizr.js")
    script(src="js/vendor/tween/easeljs-NEXT.min.js")
    script(src="js/vendor/tween/createjs/events/Event.js")
    script(src="js/vendor/tween/createjs/events/EventDispatcher.js")
